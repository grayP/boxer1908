@using DataRepository
@model List<Image>

@{
    ViewBag.Title = "Show";
}

<h2>Boxer Images</h2>


<div class="row">
    <div class="col-lg-12">

        <div class="alert alert-warning">You have @Model.Count() Photos </div>
    </div>
    @foreach (var item in Model)
    {

            string imageBase64 = Convert.ToBase64String(item.ThumbNailSmall);
            string imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);

            <div class="col-lg-3 col-md-4 col-xs-6 thumb">

                <a class="thumbnail" href="@item.ImageURL">
                    <img class="img-responsive" src="@imageSrc" style="height: 300px;" alt="">
                </a>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <!--This bundle was moved by the Telerik VS Extensions for compatibility reasons-->
    @Scripts.Render("~/bundles/jquery")


</head>
<body>
        <header>


            <div class="navbar navbar-inverse navbar-fixed-top cbp-af-header" role="navigation">
                <div class="container">
                    <div class="navbar-header">

                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="#" class="navbar-brand">
                            <img src="~/Content/images/bxlogo.png" />
                        </a>

                    </div>

                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            @Html.Partial("_menu")

                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>

                </div>
            </div>
        </header>
        <div class="container">
            <div class="body-content">
                <section class="row">
                    <div class="fill-screen fixed-attachment">
                        @RenderBody()
                    </div>
                </section>

            </div>
        </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Boxer - grown men, doing stupid things, expensively!</p>
    </footer>


        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/custom")
        @RenderSection("scripts", required: false)

</body>
</html>

@model DataRepository.Models.DocumentViewModel

@{
    ViewBag.Title = "Documents";
}


@using (Html.BeginForm())
{
    <!-- Start Hidden form -->
    @Html.HiddenFor(m => m.EventCommand)
    @Html.HiddenFor(m => m.EventArgument)
    @Html.HiddenFor(m => m.Mode)
    <!-- End Hidden form-->



    <!-- Start Search Area -->
    if (Model.IsSearchVisible)
    {
        <div class="panel panel-primary">
            <div class="panel-heading">

            </div>
            <div class="panel-title"></div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.SearchEntity.DocumentText, "Text")
                    @Html.TextBoxFor(m => m.SearchEntity.DocumentText, new { @class = "form-control" })
                </div>

            </div>
            <div class="panel-footer">
                <button id="btnSearch" class="btn btn-sm btn-primary" data-pdsa-action="search">
                    <i class="glyphicon glyphicon-search"></i>&nbsp;Search
                </button>
                <button id="btnReset" class="btn btn-sm btn-primary" data-pdsa-action="resetsearch">
                    <i class="glyphicon glyphicon-share-alt"></i>&nbsp; Reset
                </button>
                <button id="btnAdd" class="btn btn-sm btn-primary" data-pdsa-action="add">
                    <i class="glyphicon glyphicon-plus-sign"></i>&nbsp; Add
                </button>
            </div>

        </div>
    }
    <!-- End Search Area-->

     <!-- Start List Area  -->
    if (Model.IsListAreaVisible)
    {
        <div class="table-responsive">
            <table class="table table-condensed table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th class="pdsa-action-button-column">Edit</th>
                        <th>Text</th>
                        <th>Type</th>
                        <th>Regatta</th>
                        <th class="pdsa-action-button-column">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.documents)
                    {
                        <tr>
                            <td class="pdsa-action-button-column"><a href="#" data-pdsa-action="edit" data-pdsa-val="@item.Id" class="btn btn-sm btn-default"><i class="glyphicon glyphicon-edit"></i></a></td>
                            <td>
                                @item.DocumentText
                            </td>
                            <td>@item.DocumentType</td>
                            <td>@item.RegattaID</td>
                            <td class="pdsa-action-button-column"><a href="#" data-pdsa-action="delete" data-pdsa-val="@item.Id" class="btn btn-sm btn-default"><i class="glyphicon glyphicon-trash"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    <!-- End List Area-->
    <!--Detail Area-->

    if (Model.IsDetailVisible)
    {

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h1 class="panel-title">
                    Regatta
                </h1>
            </div>
            <div class="panel-body">
                <!-- Begin Message Area -->
                <div class="row">
                    <div class="col-sm-12">
                        @if (!Model.IsValid)
                        {
                            <div class="alert alert-danger alert-dismissable" role="alert">
                                <button type="button" class="close" data-dissmiss="alert">
                                    <span aria-hidden="true">&times</span>

                                    <span class="sr-only">Close</span>
                                </button>
                                @Html.ValidationSummary(false)
                            </div>
                        }
                    </div>
                </div>
                <!-- End message Area-->
                <div class="form-group">
                    @Html.HiddenFor(m => m.Entity.Id)
                    @Html.LabelFor(m => m.Entity.DocumentType, "Type")
                    @Html.TextBoxFor(m => m.Entity.DocumentType, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Entity.DocumentText, "Content")
                    @(Html.Kendo().EditorFor(m => m.Entity.DocumentText)
                        .Name("Text")
                        .Encode(false)
                        .HtmlAttributes(new { style = "height:200px" })
                        .Resizable(resizable => resizable.Content(true).Toolbar(true))
                    )


                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Entity.RegattaID, "Regatta")
                  
                      @Html.DropDownListFor(m => m.Entity.RegattaID, new SelectList(Model.RegattaList, "RegattaID", "Regatta",Model.Entity.RegattaID), new { @class = "form-control" })
               
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Entity.nPublic, "Public")
                    @Html.CheckBoxFor(m => m.Entity.nPublic, new { @class = "form-control" })
                </div>

            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <button class="btn btn-primary" id="btnSave" data-pdsa-action="save">
                            <i class="glyphicon glyphicon-floppy-disk"></i>&nbsp; Save
                        </button>
                        <button class="btn btn-primary" formnovalidate id="btnCancel" data-pdsa-action="cancel">
                            <i class="glyphicon glyphicon-remove-circle"></i>&nbsp;Cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>

    }

    <!-- End Detail Area-->

}

@section scripts
{


}
